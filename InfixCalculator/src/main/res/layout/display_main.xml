<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="7"
            android:columnWidth="90dp"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="false"
            android:layout_gravity="center"
            android:layout_below="@+id/screen"
            android:layout_alignParentLeft="false"
            android:layout_centerInParent="true"
            android:id="@+id/grid">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:id="@+id/btnOpenParen"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M+"
                android:id="@+id/btnMemAdd"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="setMemory" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/btnEight"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MR"
                android:id="@+id/btnMemRecall"
                android:layout_row="1"
                android:layout_column="1"
                android:singleLine="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="recallMemory" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MC"
                android:id="@+id/btnMemClear"
                android:layout_row="1"
                android:layout_column="2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="clearMemory" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:id="@+id/btnCloseParen"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:id="@+id/btnModulo"
                android:layout_row="5"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter"
                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cls"
                android:id="@+id/btnClear"
                android:layout_row="1"
                android:layout_column="3"
                android:singleLine="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="clearScreen" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/btnSeven"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnDivide"
                android:layout_row="2"
                android:layout_column="3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/btnNine"
                android:layout_row="2"
                android:layout_column="2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y^x"
                android:id="@+id/btnExp"
                android:layout_row="0"
                android:layout_column="2"
                android:singleLine="false"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/btnFour"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/btnFive"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/btnSix"
                android:layout_row="3"
                android:layout_column="2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/btnMultiply"
                android:layout_row="3"
                android:layout_column="3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/btnOne"
                android:layout_row="4"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/btnTwo"
                android:layout_row="4"
                android:layout_column="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/btnThree"
                android:layout_row="4"
                android:layout_column="2"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnSubtract"
                android:layout_row="4"
                android:layout_column="3"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/btnDecimal"
                android:layout_row="5"
                android:layout_column="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/btnZero"
                android:layout_row="5"
                android:layout_column="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnAdd"
                android:layout_row="5"
                android:layout_column="3"
                android:singleLine="false"
                android:layout_gravity="center|fill"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="addCharacter" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/btnEqual"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center|fill"
                android:layout_columnSpan="4"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="evaluateExpression" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backspace"
                android:id="@+id/btnBack"
                android:layout_column="3"
                android:layout_row="0"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:onClick="backspace" />

        </GridLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/screen"
            android:background="@android:color/white"
            android:autoText="false"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_marginTop="10px"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textSize="26pt"
            android:paddingRight="5dp"
            android:textAlignment="gravity"
            android:singleLine="true"
            android:textIsSelectable="true"
            android:text="0" />

    </RelativeLayout>

</FrameLayout>
